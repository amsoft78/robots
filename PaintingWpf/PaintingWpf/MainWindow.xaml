            <xctk:UIntegerUpDown x:Name="txtBlueProcessingTime" HorizontalAlignment="Left" Margin="350,110,0,0" VerticalAlignment="Top" Width="76" DefaultValue="10" DisplayDefaultValueOnEmptyText="True" Height="20"/>
